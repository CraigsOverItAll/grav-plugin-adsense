{% if adsense_direction == ( "top" or "bottom" ) %}{% set direction = "horizontal" %}
{% elseif adsense_direction == ( "left" or "right" ) %}{% set direction = "vertical" %}
{% endif %}

<ins id="adsense"
     class="adsbygoogle {{ adsense_type }} {{ adsense_direction }} {{ direction }}{% if adsense_sandy == true %} sandy{% endif %}"
     data-ad-client="{{ adsense_client }}"
     data-ad-slot="{{ adsense_slot }}">
     {% if adsense_sandy == true %} 
       <img src="{{ base_url ~ '/user/plugins/adsense/assets/img/sandy_horizontal.png' }}" alt="Sandy Ad {{ adsense_type|camelize }}" title="Sandy Ad {{ adsense_type|camelize }}">
     {% endif %}
</ins>
